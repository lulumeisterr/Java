package br.com.fiap.teste;

import javax.swing.JOptionPane;

import br.com.fiap.DAO.ClienteDAO;
import br.com.fiap.bean.Cliente;

public class ATUALIZANDO_COM_INCREMENTO_UP {

	public static void main(String[] args) {
		

		Cliente c = new Cliente();
		ClienteDAO dao = null;
		try{
			dao = new ClienteDAO();
			int numero = Integer.parseInt(JOptionPane.showInputDialog("Numero para ser Upado"));
			System.out.println(dao.AUMENTANDO_ESTRELA(numero));
		}catch(Exception e){
			e.printStackTrace();
		}finally{
			try{
				System.out.println(dao.fecharConexao());
			}catch(Exception e){
				e.printStackTrace();	
			}
		}

	}

		

	}

}
